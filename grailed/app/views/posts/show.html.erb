<div class="flex-column">
  <div class="col-lg-8">

	<p id="notice"><%= notice %></p>

	<p>
	  <strong>User:</strong>
	  <%= @post.user.name %>
	</p>

	<p>
	  <strong>Description:</strong>
	  <%= @post.description %>
	</p>
    
	<p><%= @post.likes.count %> <%= (@post.likes.count) == 1 ? 'Like' : 'Likes'%></p>

	<%= link_to 'Edit', edit_post_path(@post) %> |
	<%= link_to 'Back', posts_path %>
 </div>
</div>
