      <%= form.label :email %><br />
      <%= form.text_field :email %>
    </div>
    
    <div class="field">
      <%= form.label "Profile Photo" %><br />
      <%= form.file_field :avatar %>
    </div>
    
    <div class="field">
      <%= form.label :bio %><br />
      <%= form.text_area :bio %>
    </div>

     <div class="field">
      <%= form.label :country %><br />
      <%= form.text_field :country %>
    </div>

    <div class="field">
      <%= form.label :city %><br />
      <%= form.text_field :city %>
    </div>
    <br />
    
    <div class="field">
      <%= form.label :role %><br />
      <%= form.text_field :role %>
    </div>
    <br />
   
    
    <div class="actions">
      <br />
      <%= form.submit %>
    </div>
  <% end %>
</div>

